<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivCafeHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"/>

    <TextView
        android:id="@+id/tvCafeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cafe Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        style="?attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="4.5"
        android:stepSize="0.1"
        android:isIndicator="true"/>

    <TextView
        android:id="@+id/tvCafeAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123 Coffee Street"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvOpenHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open ⋅ Closes 9PM"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="142 reviews"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ⋅ ⭐ 4.5"
            android:textSize="14sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnWriteReview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Write a Review"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"/>

</LinearLayout>